<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluePrimary"
    android:padding="30dp"
    tools:context=".ui.AddCustomerActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_yellow_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/backButton" />

    <TextView
        android:id="@+id/tvAddCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/rhdbold"
        android:text="@string/addNewCustomer"
        android:textColor="@color/yellowPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddCustomer">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rhdbold"
            android:text="@string/customerName"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerName"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView
            android:id="@+id/tvCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rhdbold"
            android:text="@string/phoneNumber"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerPhone"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="@string/phone"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <TextView
            android:id="@+id/tvCustomerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rhdbold"
            android:text="@string/emailAddress"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerEmail"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tvCustomerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rhdbold"
            android:text="@string/homeAddress"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerAddress"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="@string/address"
            android:importantForAutofill="no"
            android:inputType="text" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_yellow"
        android:fontFamily="@font/rhtmedium"
        android:gravity="center"
        android:text="@string/addCustomer"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>