<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluePrimary"
    android:padding="30dp"
    tools:context=".EditCustomerActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_yellow_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEditCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/rhdbold"
        android:text="Edit Customer"
        android:textColor="@color/yellowPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEditCustomer">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rhdbold"
            android:text="Customer Name"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerName"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="Name"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView
            android:id="@+id/tvCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rhdbold"
            android:text="Phone Number"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerPhone"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="Phone"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <TextView
            android:id="@+id/tvCustomerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rhdbold"
            android:text="Email Address"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerEmail"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tvCustomerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rhdbold"
            android:text="Home Address"
            android:textColor="@color/yellowPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCustomerAddress"
            style="@style/inputRegular"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_edit"
            android:hint="Address"
            android:importantForAutofill="no"
            android:inputType="text" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_yellow"
        android:fontFamily="@font/rhtmedium"
        android:gravity="center"
        android:text="Save"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>